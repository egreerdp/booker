<div id="<%= dom_id user %>" class="card shadow-sm mb-3">
  <div class="card-body d-flex justify-content-between align-items-start">
    <div>
      <h5 class="card-title"><%= user.display_name.present? ? user.display_name : user.user_name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= user.email_address %></h6>
      <% if user.user_name.present? && user.display_name != user.user_name %>
        <p class="card-text small text-muted">Username: <%= user.user_name %></p>
      <% end %>
      <p class="card-text small text-muted">Joined: <%= user.created_at.strftime('%B %d, %Y') %></p>
    </div>
    <div>
      <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-primary btn-sm me-2' %>
      <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
    </div>
  </div>
</div>
