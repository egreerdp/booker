<div class="container mt-4">
  <div class="row">
    <div class="col-md-12 mb-3">
      <div id="alerts-container">
        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <div class="card shadow-sm">
        <div class="card-body p-3 text-center">
          <h6 class="text-muted">Placeholder</h6>
          <p class="text-muted small">Navigation or quick links could go here.</p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h1 class="mb-3">Dashboard</h1>

      <section class="mb-3">
        <div class="card shadow-sm">
          <div class="card-header bg-white py-2">
            <div class="d-flex justify-content-between align-items-center">
              <h2 class="h6 text-uppercase fw-bold text-primary mb-0">
                <%= link_to "Reservations", reservations_path, class: "nav-link" %>
              </h2>
              <% if @reservations.present? %>
                <span class="badge bg-primary rounded-pill"><%= @reservations.count %></span>
              <% end %>
            </div>
          </div>
          <div class="card-body p-2">
            <% if @reservations.present? %>
              <ul class="list-group list-group-flush">
                <% @reservations.each do |reservation| %>
                  <li class="list-group-item py-1"><%= render reservation %></li>
                <% end %>
              </ul>
            <% else %>
              <p class="lead text-muted mb-0">No reservations yet.</p>
            <% end %>
          </div>
        </div>
      </section>

      <section class="mb-3">
        <div class="card shadow-sm">
          <div class="card-header bg-white py-2">
            <div class="d-flex justify-content-between align-items-center">
              <h2 class="h6 text-uppercase fw-bold text-success mb-0">
                <%= link_to "Events", events_path, class: "nav-link" %>
              </h2>
              <% if @events.present? %>
                <span class="badge bg-success rounded-pill"><%= @events.count %></span>
              <% end %>
            </div>
          </div>
          <div class="card-body p-2">
            <% if @events.present? %>
              <ul class="list-group list-group-flush">
                <% @events.each do |event| %>
                  <li class="list-group-item py-1"><%= render event %></li>
                <% end %>
              </ul>
            <% else %>
              <p class="lead text-muted mb-0">No events yet.</p>
            <% end %>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-2">
      <div class="card shadow-sm">
        <div class="card-body p-3 text-center">
          <h6 class="text-muted">Placeholder</h6>
          <p class="text-muted small">Ads or related information could be here.</p>
        </div>
      </div>
    </div>
  </div>
</div>
