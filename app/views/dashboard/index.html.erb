<div class="container mt-4">
  <div class="row">
    <div class="col-md-2">
      <div class="card shadow-sm">
        <div class="card-body p-3 text-center">
          <h6 class="text-muted">Placeholder</h6>
          <p class="text-muted small">Navigation or quick links could go here.</p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h1 class="mb-3">Dashboard</h1>

      <section class="mb-3">
        <div class="card shadow-sm">
          <div class="card-header bg-white py-2">
            <div class="d-flex justify-content-between align-items-center">
              <h2 class="h6 text-uppercase fw-bold text-primary mb-0">
                <%= link_to "Reservations", reservations_path, class: "nav-link" %>
              </h2>
              <div class="d-flex align-items-center">
                <% if @reservations.present? %>
                  <span class="badge bg-primary rounded-pill me-2"><%= @reservations.count %></span>
                <% end %>
                <%= link_to new_reservation_path, class: "text-primary" do %>
                  <i class="bi bi-plus-circle-fill" style="font-size: 1.2em;"></i>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body p-2">
            <% if @reservations.present? %>
              <ul class="list-group list-group-flush">
                <% @reservations.each do |reservation| %>
                  <li class="list-group-item py-1"><%= render reservation %></li>
                <% end %>
              </ul>
            <% else %>
              <p class="lead text-muted mb-0">No reservations yet.</p>
            <% end %>
          </div>
        </div>
      </section>

      <section class="mb-3">
        <div class="card shadow-sm">
          <div class="card-header bg-white py-2">
            <div class="d-flex justify-content-between align-items-center">
              <h2 class="h6 text-uppercase fw-bold text-success mb-0">
                <%= link_to "Events", events_path, class: "nav-link" %>
              </h2>
              <div class="d-flex align-items-center">
                <% if @events.present? %>
                  <span class="badge bg-success rounded-pill me-2"><%= @events.count %></span>
                <% end %>
                <%= link_to new_event_path, class: "text-success" do %>
                  <i class="bi bi-plus-circle-fill" style="font-size: 1.2em;"></i>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body p-2">
            <% if @events.present? %>
              <ul class="list-group list-group-flush">
                <% @events.each do |event| %>
                  <li class="list-group-item py-1"><%= render event %></li>
                <% end %>
              </ul>
            <% else %>
              <p class="lead text-muted mb-0">No events yet.</p>
            <% end %>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-2">
      <div class="card shadow-sm">
        <div class="card-body p-3 text-center">
          <h6 class="text-muted">Placeholder</h6>
          <p class="text-muted small">Ads or related information could be here.</p>
        </div>
      </div>
    </div>
  </div>
</div>
